<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EM"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zzanga.mapper.BoardMapper">
	
	<!-- list전체 출력 -->
	<select id="getList" resultType="org.zzanga.domain.BoardVO">
	<![CDATA[
		select * from tbl_board where bno > 0
	]]>
	</select>


	<!-- insert -->
	<insert id="insert">
		insert into tbl_board(title,content,writer)
		values (#{title}, #{content}, #{writer})
	</insert>

 	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		
		insert into tbl_board (title,content, writer)
		value (#{title}, #{content}, #{writer})
	</insert>

 
 
 	<!-- read -->
 	<select id="read" resultType="org.zzanga.domain.BoardVO">
 		select * from tbl_board where bno = #{bno}
 	</select>
 	
 	
 	<!-- delete -->
 	<delete id="delete">
 		delete from tbl_board where bno = #{bno}
 	</delete>
 	
 	
 	<!-- update -->
 	<update id="update">
 		update tbl_board
 		set title= #{title},
 		content=#{content},
 		writer = #{writer},
 		updateDate = now()
 		where bno = #{bno}
 	</update>
</mapper>